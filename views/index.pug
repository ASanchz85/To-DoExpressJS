extends layout

block content
  main.container
    h1.text-center= title
    div.text-right
      a.add-button(href='/add') Add new task
    ul.task-list
      if tasks.length === 0
        li
          b.text-center No tasks yet ğŸ˜„ğŸ‘ğŸ¼
      else
        each task in tasks
          li(class=task.completed ? 'completed' : '')
            div
              a(href=`/edit/${task.id}`) #{task.title}
            div
              if task.completed
                a.uncomplete-button(href=`/uncomplete/${task.id}`) Mark as uncomplete
              else
                a.complete-button(href=`/complete/${task.id}`) Mark as complete
              a.delete-button(href=`/delete/${task.id}`) Delete
          p(class=task.completed ? 'description uncomplete' : 'description')= task.description